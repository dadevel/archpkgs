pkgname=responder
pkgver=latest
pkgrel=1
url="https://github.com/lgandx/${pkgname}.git"
arch=(any)
license=(GPL3)
depends=(python)
source=("git+${url}")
sha256sums=(SKIP)

package() {
  cd "${srcdir}/${pkgname}"
  mkdir -p "${pkgdir}"/opt/archpkgs/{bin,lib} "${pkgdir}/opt/archpkgs/${pkgname}"
  python -m venv "${pkgdir}/opt/archpkgs/${pkgname}"
  source "${pkgdir}/opt/archpkgs/${pkgname}/bin/activate"
  cp -r . "${pkgdir}/opt/archpkgs/${pkgname}/"
  pip freeze
  cat << EOF > "${pkgdir}/opt/archpkgs/bin/${pkgname}"
#!/bin/sh
set -eu
export VIRTUAL_ENV=/opt/archpkgs/${pkgname}
export PYTHONPATH=/opt/archpkgs/${pkgname}
exec python /opt/archpkgs/${pkgname}/Responder.py "\$@"
EOF
  chmod +x "${pkgdir}/opt/archpkgs/bin/${pkgname}"
}

pkgver() {
  cd "${srcdir}/${pkgname}"
  git describe --long --tags | sed 's|-|_|g'
}
